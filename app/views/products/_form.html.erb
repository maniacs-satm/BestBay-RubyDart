<script src="http://code.jquery.com/jquery-1.8.2.js"></script>
<script src="http://code.jquery.com/ui/1.9.1/jquery-ui.js"></script>
<style type = "text/css">
      body {background-color: #ffc40d;}
</style>
<script>
  $(function() {
    $( "#datepicker" ).datepicker({ minDate: 0});
  });
</script>

<%= form_for(@product, :html => {:id => "new_product_form"}) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :category_id %>
    <%= collection_select(:product, :category_id, Category.all, :id, :content) %>
  </div>
  <div class="field">
    <%= f.label :start_price %><br />
    <%= f.text_field :start_price %>
  </div>
  <div class="field">
    <%= f.label :bid_until %><br />
    <%= f.text_field :bid_until, :id => "datepicker" %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

