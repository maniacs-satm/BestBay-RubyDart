<p id="notice"><%= notice %></p>


<table>
  <tr>
    <td id="productImage">
      <% if @product.image.exists? then %>
          <%= image_tag @product.image.url(:small) %> </br>
      <% end %>
    </td>
    <td id="productInfo">
      <p class="title">
        <b><%= @product.title %></b>
      </p>

      <p>
        <b>by:</b>
        <%= link_to @product.user_name, @productOwner%>
      </p>

      <p id="productPrice" class="price">
        <b>Start price:</b>
        <%= @product.start_price %>
      </p>

      <p id="currentPrice" class="price">
        <b>Current price:</b>
        $<%= @product.current_price %>
      </p>

      <p>
        <b>Description:</b>
        <%= @product.description %>
      </p>

      <p>
        <b>Time left:</b>
        <%= @product.time_left %>
      </p>
    </td>
  </tr>
</table>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
